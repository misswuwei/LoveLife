<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/game_home_commtent_img"/>
            <View
                android:id="@+id/game_home_commtent_line"
                android:layout_below="@id/game_home_commtent_img"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bb2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/game_home_commtent_content"
                android:layout_below="@id/game_home_commtent_img"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="14dp"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_below="@id/game_home_commtent_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#ccc"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
