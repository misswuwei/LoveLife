<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#aaa">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/weather_location_icon"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/location"/>
        <TextView
            android:id="@+id/weather_loaction_name"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/weather_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国，北京市"
            android:textColor="@color/white"
            android:textSize="15dp"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/weather_loaction_name"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_weather_rectangl">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_marginLeft="1dp"
                android:id="@+id/weather_kongqi_iocn"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                app:riv_oval="true"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:text="31优"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/weather_kongqi_iocn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/weather_wendu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="28°"
            android:layout_marginLeft="10dp"
            android:textSize="58sp"/>
        <ImageView
            android:id="@+id/weather_icon"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/weather_wendu_text"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/weather_tv_name"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴"
            android:textSize="25dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/weather_shidu_icon"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            />

        <TextView
            android:id="@+id/weather_shidu_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/weather_shidu_icon"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度"
            android:textColor="@color/white"
            android:textSize="15sp"/>
        <ImageView
            android:layout_toRightOf="@id/weather_shidu_text"
            android:id="@+id/weather_fengli_icon"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            />

        <TextView
            android:id="@+id/weather_fengli_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/weather_fengli_icon"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微风0级"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/weather_hint_item"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="今日天气提示"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_weather_rectangl"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/weather_hint_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/weather_hint_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天有雨"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44222222">
        <TextView
            android:id="@+id/weather_yubao_text"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预报"
            android:textColor="@color/white"/>
        <View.WeatherYubaoItem
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/weather_rl_today"></View.WeatherYubaoItem>
        <View.WeatherYubaoItem
            android:layout_below="@id/weather_rl_today"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/weather_rl_tomorrow">
        </View.WeatherYubaoItem>
        <View.WeatherYubaoItem
            android:id="@+id/weather_after_tomorrow"
            android:layout_below="@id/weather_rl_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="50dp"></View.WeatherYubaoItem>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44222222"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活指数"
            android:textColor="@color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
</LinearLayout>
